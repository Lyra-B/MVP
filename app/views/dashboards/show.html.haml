%h1
  = "Welcome #{current_user.firstname}"

.profile.inline
  .image
    = image_tag 'https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcQNy16jmVsaGnL3bXPnojxuP-yqCha6xsrOeoVETxzIsCztLv7qFA'
  .name
    = "#{current_user.firstname} #{current_user.lastname}"

  - if current_user.coach?

    %button.button.dropdown{"aria-controls" => "drop1", "aria-expanded" => "false", "data-dropdown" => "drop1", :href => "#"} Notifications
    %br
    %ul#drop1.f-dropdown{"aria-hidden" => "true", "data-dropdown-content" => ""}
      - @assignments.each do |assignment|
        = render assignment

  - if current_user.administrator?

    %button.button.dropdown{"aria-controls" => "drop1", "aria-expanded" => "false", "data-dropdown" => "drop1", :href => "#"} Coaches
    %br
    %ul#drop1.f-dropdown{"aria-hidden" => "true", "data-dropdown-content" => ""}
      = render @coaches

